<script type="text/javascript">

    $(function(){
    
      $('#katryotext').css({backgroundPosition: '0px 0px'});
      $('#twittertext').css({backgroundPosition: '0px 0px'});
    
        $('#katryotext').animate({
            backgroundPosition:"(-10000000px -1500000px)"
        }, 24000000, 'linear');
        
        $('#twittertext').animate({
            backgroundPosition:"(-10000px -2000px)"
        }, 120000, 'linear');
    });
    
    
    $(function() {
    
        $('#link_bg').css({backgroundPosition: '0px 0px'});
    $("#link_bg").hover(function() {
        $el = $(this);
        $el.stop().animate({ backgroundPosition: "(-100000000px -10000000px)"}, 500000000); // マウスオーバー時の文字色とアニメーションの速さ
    }, function() {
        $el = $(this);
        $el.stop().animate({ backgroundPosition: "(0px 100px)"}, 500); // マウスオーバー後の文字色とアニメーションの速さ
     
    });
});

</script>


